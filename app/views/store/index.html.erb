
<% for product in @products %>
	<div class = "catalogentry">
		<%=image_tag(product.image_url, size: "50", alt: "Missing image", class: "product_image")%>
		<h3><%=h product.title %></h3>
		<small>
			<%= product.description %>
		</small>
		<br/>
		<strong>$<%= sprintf("%0.2f", product.price) %></strong>
		<%= link_to 'Add to Cart', {:action => "add_to_cart",:id => product}, :class => 'addtocart' %>
		<br/>
	</div>
	<div class="separator">&nbsp;</div>
<% end %>
<%= link_to "Show my cart", '#' %>
